<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.uts.business.mapper.ProductMapper">

    <!--  查询用户信息 - 分页  -->
    <select id="selectProduct" resultType="org.uts.business.domain.dto.ProductDto">
        SELECT
        `ID`,
        `NAME`,
        `PRICE`,
        `STOCK`,
        `IMAGE`,
        `DESC`,
        `CREATE_TIME`,
        `UPDATE_TIME`
        FROM
        product
        WHERE
        1 = 1
        <if test="id!=null">
            AND `ID`=#{id}
        </if>
        <if test="name!=null and name!=''">
            AND `NAME` LIKE CONCAT('%', #{name} ,'%')
        </if>
    </select>

    <!--  查询用户信息 - 分页  -->
    <insert id="addProduct" keyColumn="ID" keyProperty="id" parameterType="org.uts.business.domain.dto.ProductDto" useGeneratedKeys="true">
        INSERT INTO product
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                `ID`,
            </if>
            <if test="name != null and name != ''">
                `NAME`,
            </if>
            <if test="price != null">
                `PRICE`,
            </if>
            <if test="stock != null">
                `STOCK`,
            </if>
            <if test="image != null and image != ''">
                `IMAGE`,
            </if>
            <if test="desc != null and desc != ''">
                `DESC`,
            </if>
                `CREATE_TIME`,
                `UPDATE_TIME`
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null and name != ''">
                #{name},
            </if>
            <if test="price != null">
                #{price},
            </if>
            <if test="stock != null">
                #{stock},
            </if>
            <if test="image != null and image != ''">
                #{image},
            </if>
            <if test="desc != null and desc != ''">
                #{desc},
            </if>
            NOW(),
            NOW()
        </trim>
    </insert>

    <select id="selectById" resultType="org.uts.business.domain.dto.ProductDto">
        SELECT
        `ID`,
        `NAME`,
        `PRICE`,
        `STOCK`,
        `IMAGE`,
        `DESC`,
        `CREATE_TIME`,
        `UPDATE_TIME`
        FROM
        product
        WHERE `ID`=#{id}
    </select>
</mapper>
